<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalorieCounter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalorieCounter.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CalorieCounter">

    <!-- New SummaryPage ShellContent -->
    <ShellContent
        ContentTemplate="{DataTemplate local:SummaryPage}"
        Route="SummaryPage" />


    <!-- Existing UploadPage ShellContent -->
    <ShellContent
    ContentTemplate="{DataTemplate local:UploadPage}"
    Route="UploadPage" />
</Shell>
